                android:id="@+id/label_niv_signal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10pt"
                android:paddingRight="10pt"
                android:text="Niveau du Signal" />

            <TextView
                android:id="@+id/niv_signal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
